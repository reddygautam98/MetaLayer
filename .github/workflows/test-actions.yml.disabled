name: Test Actions Versions

on:
  workflow_dispatch:
  push:
    paths:
      - '.github/workflows/test-actions.yml'

jobs:
  test-actions:
    name: ðŸ§ª Test Updated Actions
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Create test artifact
        run: |
          echo "Testing actions versions" > test-output.txt
          echo "GitHub Actions Runner: ${{ runner.name }}" >> test-output.txt
          echo "Timestamp: $(date)" >> test-output.txt

      - name: Upload test artifact
        uses: actions/upload-artifact@v4
        with:
          name: test-artifact-${{ github.run_number }}
          path: test-output.txt
          retention-days: 1

      - name: Verify no deprecated warnings
        run: |
          echo "âœ… All actions using latest versions:"
          echo "  - actions/checkout@v4"
          echo "  - actions/setup-python@v5"
          echo "  - actions/upload-artifact@v4"